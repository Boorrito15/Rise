<section class = "dragon-experience-area">
  <div class = "container d-flex" >
    <div>
      <h1> <%= Dragon.first.name %> </h1>
      <p> Owner: <%= Dragon.first.user.first_name %> </p>
      <p> Species: <%= Dragon.first.species %> </p>
      <p> Speed: <%= Dragon.first.speed %> </p>
      <p> Armour: <%= Dragon.first.armour %> </p>
      <p> Fire power: <%= Dragon.first.fire_power %> </p>
    </div>
      <%= image_tag "dragon_toothless.png" %>
  </div>
</section>

<div class="container text-center">
  <div class="row align-items-start">
    <div class="col ps-0">
      <p class = text-start> <%= Dragon.first.description %> </p>
    </div>
    <div class="col">
      <form>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
