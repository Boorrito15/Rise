<div class = "container">
  <% if @booking.status == "pending" %>
    <% if current_user == @booking.user %>
      <h1>Your request to take <%= @booking.dragon.name %> to <%= @booking.arrival_location %> has been status submitted!</h1>
    <% elsif current_user == @booking.dragon.user %>
      <h1> <%= @booking.user %> has requested to take <%= @booking.dragon.name %> to <%= @booking.arrival_location %></h1>
    <% end %>
  <% elsif @booking.status == "accepted" %>
    <% if current_user == @booking.user %>
      <h1>Your request to take <%= @booking.dragon.name %> to <%= @booking.arrival_location %> has been accepted!</h1>
    <% elsif current_user == @booking.dragon.user %>
      <h1> <%= @booking.user %> will ride <%= @booking.dragon.name %> to <%= @booking.arrival_location %> from <%= @booking.start_date %> to <%= @booking.end_date %></h1>
    <% end %>
  <% else %>
    <% if current_user == @booking.user %>
      <h1> Your request to take <%= @booking.dragon.name %> to <%= @booking.arrival_location %> has been rejected! </h1>
    <% elsif current_user == @booking.dragon.user %>
      <h1> You have declined <%= @booking.user%>'s to take <%= @booking.dragon.name %> to <%= @booking.arrival_location %> </h1>
    <% end %>
  <% end %>
</div>
<div class = "container d-flex justify-content-center" >
  <div class="card-trip">
    <h3> Booking details </h3>
    <div>
      <div class="card-image">
        <%= cl_image_tag @booking.dragon.photo.key %>
      </div>
      <div class="card-trip-infos">
        <div>
          <h2> <%= @booking.dragon.name %> </h2>
          <p><%= @booking.dragon.species %></p>
        </div>
        <h2 class ="font" class="card-trip-pricing">$<%= @booking.dragon.price %></h2>
      </div>
    </div>
      <div>
        <p> <%= @booking.departure_location %> </p>
        <p> <%= @booking.arrival_location %> </p>
      </div>
      <div>
        <p> <%= @booking.start_date %> </p>
        <p> <%= @booking.end_date %> </p>
      </div>
      <div>
        <p> <%= @booking.status %> </p>
      </div>
      <div>
        <% if @booking.user == @booking.dragon.user %>
          <%= link_to ,  %>
      </div>
    <div>
    </div>
  </div>
</div>


